    <title>Barcode Generator UCMSTT</title>
</head>

<body>
    <div class="container">
        <h1 style="text-align:center">Barcode Generator FIT.STT</h1>
        <div class="text-center">
        </div>
        <div class="text-center">
            <svg id="barcode"></svg>
        </div>
        <div id="stt" style="display:flex;justify-content:center;align-items: baseline;">
            <label for="ipBarcode" for="ipBarcode">Nháº­p barcode &nbsp </label>
            <input id="ipBarcode" type="text">
            <button class="btn btn-primary center-block" type="submit" class="btn btn-primary"
                onclick="generateBarcodeByClick()">Generate</button>
        </div>
    </div>
    <script type="text/javascript">
        function generateBarcodeByClick() {
            var input = $('#ipBarcode').val();
            generateBarcode(input);
        }

        function generateBarcode(input) {

            JsBarcode("#barcode", input, {
                format: "CODE128",
                displayValue: true
            });
        }

        function getParameterByName(name, url) {
            if (!url) url = window.location.href;
            name = name.replace(/[\[\]]/g, '\\$&');
            var regex = new RegExp('[?&]' + name + '(=([^&#]*)|&|#|$)'),
                results = regex.exec(url);
            if (!results) return null;
            if (!results[2]) return '';
            return decodeURIComponent(results[2].replace(/\+/g, ' '));
        }

    </script>
</body>

</html>